<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.friend.FriendsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_frined"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatActionButton_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_add_friend"
        android:backgroundTint="@color/colorAppDefault"
        android:contentDescription="@string/content_friend"
        android:layout_margin="@dimen/_15sdp" />

</FrameLayout>