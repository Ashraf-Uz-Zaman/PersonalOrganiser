<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_260sdp" android:layout_height="@dimen/_200sdp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/style_curve_item"
    android:minHeight="@dimen/_200sdp"
    android:minWidth="@dimen/_260sdp"
    android:padding="@dimen/_10sdp">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/lobster"
        android:textColor="@color/appColor"
        android:textSize="@dimen/_14sdp"
        android:text="Add Task"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#0385ff"
        android:textSize="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:hint="DD/MM/YYYY"/>
    <EditText
        android:id="@+id/et_dialog_taskname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_3sdp"
        android:textColor="@android:color/black"
        android:hint="Task Name"/>
    <EditText
        android:id="@+id/et_dialog_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_3sdp"
        android:textColor="@android:color/black"
        android:hint="Location"/>
    <RelativeLayout
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:orientation="horizontal"
        android:background="@drawable/style_curve_not_complete"
        android:padding="@dimen/_5sdp">
        <TextView
            android:id="@+id/tv_dialog_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13ssp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/lobster"
            android:text="Not completed"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:weightSum="2"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add"
            android:layout_marginEnd="@dimen/_4sdp"
            android:textSize="@dimen/_14sdp"
            android:background="@drawable/style_curve_add"
            android:textColor="@android:color/white"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_marginStart="@dimen/_4sdp"
            android:textSize="@dimen/_14sdp"
            android:background="@drawable/style_curve_cancel"
            android:textColor="@android:color/white"
            android:textAllCaps="false"/>
    </LinearLayout>

</LinearLayout>